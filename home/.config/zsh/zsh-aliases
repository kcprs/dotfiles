# git
alias gs="git switch"
alias gc="git commit"
alias gb="git branch"
alias gsu="git submodule update"
 
case "$(uname -s)" in
Darwin)
	alias ls='ls -G'
	alias ll='ls -Gl'
	alias la='ls -Gla'
	;;
Linux)
	alias ls='ls --color=auto'
	alias ll='ls --color=auto -l'
	alias la='ls --color=auto -la'
	;;
CYGWIN* | MINGW32* | MSYS* | MINGW*)
	;;
*)
	;;
esac
